  <section class="video">
    <video
      class="video__video"
      autoplay
      loop
      muted
      playsinline
      preload="auto"
      controls="false"
    >
      <source src="/vid.webm">
      <source src="/vid.mp4">
    </video>
  </section>

<script>

  const video = document.querySelector('.video__video') as HTMLVideoElement;
  const target = document.querySelector('.video__video');
  if (target) {
  const options = {
    root: null,
    rootMargin: "0px",
    threshold: 0.75,
  };

  const cd: IntersectionObserverCallback = (entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        video?.play();
      } else {
        video?.pause();
      }
    }, options);
  } 
  const observer = new IntersectionObserver(cd, options);
    observer.observe(target);
  }
</script>

